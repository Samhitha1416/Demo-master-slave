pipeline {
    agent any

    tools {
        maven 'M3.9'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t samhitha1610/demo-integration:latest . "
		    bat "docker run samhitha1610/demo-integration:latest"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    bat '''
                    docker login -u samhitha1610 -p dckr_pat_rv7MMFLO_qmPLwfEL0Q5t_46FQE
                    docker push samhitha1610/demo-integration:latest
                    docker logout
                    '''
                }
            }
        }
    }
}
