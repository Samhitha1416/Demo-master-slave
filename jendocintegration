pipeline {
    agent any

    tools {
        maven 'M3.9'
    }

    environment {
        DOCKER_IMAGE = "samhitha1610/demo-integration"
        DOCKER_TAG = "v14"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker image..."
                    bat "docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% ."
                    bat "docker tag %DOCKER_IMAGE%:%DOCKER_TAG% %DOCKER_IMAGE%:latest"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "üì§ Pushing image to Docker Hub..."
                    withCredentials([usernamePassword(credentialsId: 'jenkins', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        bat """
                            echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                            docker push %DOCKER_IMAGE%:%DOCKER_TAG%
                            docker push %DOCKER_IMAGE%:latest
                            docker logout
                        """
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    echo "üöÄ Running Docker container..."
                    // Stop old container if it exists, ignore errors
                    bat 'docker stop demo-container || echo "No container to stop"'
                    bat 'docker rm demo-container || echo "No container to remove"'
                    // Run the new container
                    bat 'docker run -d --name demo-container -p 2000:8080 samhitha1610/demo-integration:latest'
                }
            }
        }
    }

    post {
        failure {
            echo "‚ùå Pipeline failed. Check console output for details."
        }
        success {
            echo "‚úÖ Pipeline completed successfully."
        }
    }
}
