pipeline {
    agent none

    tools {
        maven 'M3.9'
    }

    stages {

        stage('Checkout') {
            
            agent { label 'win' }
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            agent { label 'win' }
            steps {
                script {
                    bat 'mvn -B clean test'
                    bat 'mvn -B package'
                }
            }
        }

        stage('Archive') {
            agent { label 'win' }
            steps {
                junit 'target/surefire-reports/*.xml'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

       stage('Parallel Run') {
            parallel {
                stage('Controller') {
                    steps { echo "Controller: ${env.NODE_NAME}" }
                }
                stage('Agent') {
                    steps { bat "echo Agent: %NODE_NAME%" }
                }
            }
        }

    }
}
