pipeline {
    agent any
    tools { maven 'M3.9' }

    stages {
        stage('Checkout') {
            agent { label 'win' }
            steps { checkout scm }
        }

        stage('Build & Test') {
            agent { label 'win' }
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Archive') {
            agent { label 'win' }
            steps {
                junit 'target/surefire-reports/*.xml'
                archiveArtifacts 'target/*.jar'
            }
        }

        stage('Parallel Run') {
            parallel {
                stage('Controller') {
                    agent { label 'built-in' }
                    steps { echo "Controller: ${env.NODE_NAME}" }
                }
                stage('Agent') {
                    agent { label 'win' }
                    steps { bat "echo Agent: %NODE_NAME%" }
                }
            }
        }
    }
}
